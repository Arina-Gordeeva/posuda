        Title="dobavlenie_tovara" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="257*"/>
            <ColumnDefinition Width="143*"/>
        </Grid.ColumnDefinitions>
        <Image HorizontalAlignment="Left" Height="319" VerticalAlignment="Top" Width="564" Source="/4.png" Margin="280,83,0,0" Grid.ColumnSpan="2"/>
