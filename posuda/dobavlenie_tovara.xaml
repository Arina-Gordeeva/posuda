        <Image Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="51" Margin="474,161,0,0" VerticalAlignment="Top" Width="267" Source="/Rectangle 16.png"/>
        <Image Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="38" Margin="354,123,0,0" VerticalAlignment="Top" Width="385" Source="/Rectangle 17.png"/>
