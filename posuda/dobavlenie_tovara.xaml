            <Button.Background>
                <ImageBrush ImageSource="/2222.png"/>
            </Button.Background>
        </Button>
        <Label Content="Добавить фото" HorizontalAlignment="Left" Height="40" Margin="58,344,0,0" VerticalAlignment="Top" Width="186" FontSize="20"/>
