            <Button.Background>
                <ImageBrush ImageSource="/image 3.png"/>
            </Button.Background>
        </Button>
        <Label Content="Добавлениее товара" Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="30" Margin="354,0,0,0" VerticalAlignment="Top" Width="208"/>
