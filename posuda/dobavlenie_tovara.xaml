        <TextBox Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="22" Margin="508,176,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="206" BorderBrush="White"/>
        <TextBox Grid.Column="1" HorizontalAlignment="Left" Height="17" Margin="0,242,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="196" BorderBrush="White"/>
        <TextBox Grid.Column="1" HorizontalAlignment="Left" Height="24" Margin="0,309,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="196" BorderBrush="White"/>
