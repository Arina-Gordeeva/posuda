            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="-2.589"/>
                    <RotateTransform/>
                    <TranslateTransform X="-0.678"/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>
        <Image Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="52" Margin="477,295,0,0" VerticalAlignment="Top" Width="264" Source="/Rectangle 16.png"/>
