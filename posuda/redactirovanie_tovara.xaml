            <Button.Background>
                <ImageBrush ImageSource="/image 3.png"/>
            </Button.Background>
        </Button>
        <Label Content="Добавлениее товара" HorizontalAlignment="Left" Height="30" Margin="354,0,0,0" VerticalAlignment="Top" Width="208"/>
        <StackPanel HorizontalAlignment="Left" Height="466" Margin="6,0,0,0" VerticalAlignment="Center" Width="793" RenderTransformOrigin="0.5,0.5">
            <StackPanel.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0.851"/>
                    <TranslateTransform/>
                </TransformGroup>
            </StackPanel.RenderTransform>
        </StackPanel>

    </Grid>
</Window>
