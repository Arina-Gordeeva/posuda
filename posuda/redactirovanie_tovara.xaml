            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="-2.589"/>
                    <RotateTransform/>
                    <TranslateTransform X="-0.678"/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>
        <Image HorizontalAlignment="Left" Height="52" Margin="477,295,0,0" VerticalAlignment="Top" Width="264" Source="/Rectangle 16.png"/>
        <Image HorizontalAlignment="Left" Height="51" Margin="477,225,0,0" VerticalAlignment="Top" Width="267" Source="/Rectangle 16.png"/>
        <Image HorizontalAlignment="Left" Height="51" Margin="474,161,0,0" VerticalAlignment="Top" Width="267" Source="/Rectangle 16.png"/>
        <Image HorizontalAlignment="Left" Height="38" Margin="354,123,0,0" VerticalAlignment="Top" Width="385" Source="/Rectangle 17.png"/>
        <TextBox HorizontalAlignment="Left" Height="20" Margin="382,123,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="332" BorderBrush="White"/>
        <TextBox HorizontalAlignment="Left" Height="22" Margin="508,176,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="206" BorderBrush="White"/>
        <TextBox HorizontalAlignment="Left" Height="17" Margin="518,242,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="196" BorderBrush="White"/>
        <TextBox HorizontalAlignment="Left" Height="24" Margin="518,309,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="196" BorderBrush="White"/>
        <Ellipse HorizontalAlignment="Left" Height="48" Margin="710,21,0,0" Stroke="Black" VerticalAlignment="Top" Width="62" Fill="#FF4A8C51"/>
